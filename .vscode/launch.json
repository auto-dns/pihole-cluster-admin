{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Backend (Go)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/cmd/pihole-cluster-admin",
      "cwd": "${workspaceFolder}",
      "env": {},
      "envFile": "${workspaceFolder}/.devcontainer/.env",
      "buildFlags": ["-tags=dev"],
      "args": ["--config", "${workspaceFolder}/.devcontainer/config.yaml"]
    },
    {
      "name": "Run Frontend (Vite)",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceFolder}/frontend"
    },
  ]
}
