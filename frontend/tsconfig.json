{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"types": [
			"node",
			"vite/client"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"vite.config.ts",
	],
	"exclude": [
		"node_modules",
		"dist",
	]
}